.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:assets, :index)
      %li=link_to pat(:new), url(:assets, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:assets)
    .inner
      %table.table
        %tr
          %th.first=mat(:asset, :file_path)
          %th=mat(:asset, :created_at)
          %th=mat(:asset, :updated_at)
          %th=mat(:asset, :file_name)
          %th=mat(:asset, :file_type)
          %th.last="&nbsp;"
        -@assets.each do |asset|
          %tr
            %td.first=asset.file_path
            %td=asset.created_at
            %td=asset.updated_at
            %td=asset.file_name
            %td=asset.file_type
            %td.last
              =button_to pat(:edit), url(:assets, :edit, :id => asset.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:assets, :destroy, :id => asset.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")