.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), url(:clips, :index)
      %li=link_to pat(:new), url(:clips, :new)
  .content
    %h2.title
      =pat(:all)
      =mt(:clips)
    .inner
      %table.table
        %tr
          %th.first=mat(:clip, :position)
          %th=mat(:clip, :duration)
          %th=mat(:clip, :created_at)
          %th=mat(:clip, :title)
          %th=mat(:clip, :updated_at)
          %th=mat(:clip, :account_id)
          %th=mat(:clip, :atype)
          %th=mat(:clip, :asset_id)
          %th.last="&nbsp;"
        -@clips.each do |clip|
          %tr
            %td.first=clip.position
            %td=clip.duration
            %td=clip.created_at
            %td=clip.title
            %td=clip.updated_at
            %td=clip.account_id
            %td=clip.atype
            %td=clip.asset_id
            %td.last
              =button_to pat(:edit), url(:clips, :edit, :id => clip.id), :method => :get, :class => :button_to
              ="|"
              =button_to pat(:delete), url(:clips, :destroy, :id => clip.id), :method => :delete, :class => :button_to
      .actions-bar.wat-cf
        .actions="&nbsp;"

-content_for :sidebar, partial("base/sidebar")